generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname      String
  lastname       String
  email          String   @unique
  password       String
  communities_id String[] @db.Uuid
}

model Crew {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  members      String[]
  admins       String[]
  owner        String
  community    Community @relation(references: [id], fields: [community_id])
  community_id String    @db.Uuid
  Course       Course[]
}

model Community {
  id     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  Course Course[]
  Crew   Crew[]
}

model Course {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  community    Community @relation(references: [id], fields: [community_id])
  community_id String    @db.Uuid
  crew         Crew      @relation(references: [id], fields: [crew_id])
  crew_id      String    @db.Uuid
  Section      Section[]
}

model Section {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  course    Course    @relation(references: [id], fields: [course_id])
  course_id String    @db.Uuid
  Chapters  Chapter[]
}

model Chapter {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  section    Section  @relation(references: [id], fields: [section_id])
  section_id String   @db.Uuid
  Lessons    Lesson[]
}

model Lesson {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  chapter    Chapter @relation(references: [id], fields: [chapter_id])
  chapter_id String  @db.Uuid
}
